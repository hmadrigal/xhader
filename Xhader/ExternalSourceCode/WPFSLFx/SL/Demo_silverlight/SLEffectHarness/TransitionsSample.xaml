<UserControl x:Class="SLEffectHarness.TransitionsSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     >
    <Grid x:Name="LayoutRoot" Background="Black">
    <Canvas Width="800" Height="600">
      <Image x:Name="oldChild" Width="800" Height="600" Stretch="UniformToFill" Opacity="1"  />
      <Image x:Name="currentChild" Width="800" Height="600" Stretch="UniformToFill"/>      
    </Canvas>
    <TextBlock Text="" VerticalAlignment="Bottom" HorizontalAlignment="Right" x:Name="effectName" Opacity="0.5" Foreground="White" FontSize="16"/>
  </Grid>
</UserControl>
